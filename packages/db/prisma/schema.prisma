generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum AuditStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Audit {
  id        String      @id @default(uuid())
  userId    String
  url       String
  status    AuditStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([userId])
  @@index([status])
}